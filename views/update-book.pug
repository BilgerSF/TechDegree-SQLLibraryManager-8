extends layout.pug

block content

  h1 Update Book
  form(action='/books/:id', method = 'post')
    p
        label(for='title') Title
        input#title(name='title', type='text', value=`${bookk.dataValues.title}`)
    p
        label(for='author') Author
        input#author(name='author', type='text', value=`${bookk.dataValues.author}`)
    p
        label(for='genre') Genre
        input#genre(name='genre', type='text', value=`${bookk.dataValues.genre}`)
    p
        label(for='year') Year
        input#year(name='year', type='text', value=`${bookk.dataValues.year}`)
    p
        label(for='id')
        input#id(type='hidden', name='id', value=`${bookk.dataValues.id}`)   
    p
        input(type='submit', value='Update Book')
  form(method='post', action='/books/:id/delete', onsubmit="return confirm('Do you really want to delete this book?');")
    p
        label(for='id')
        input#id(type='hidden', name='id', value=`${bookk.dataValues.id}`)
    p
        a.button(href='/books') Cancel
    p
        input(type='submit', value='Delete Book')
